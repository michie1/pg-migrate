{
  "name": "@urbica/pg-migrate",
  "version": "1.0.0",
  "description": "PostgreSQL migration tool",
  "author": "Stepan Kuzmin <to.stepan.kuzmin@gmail.com> (stepankuzmin.ru)",
  "license": "MIT",
  "main": "pg-migrate.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/urbica/pg-migrate.git"
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint .",
    "docs": "documentation build pg-migrate.js -g -f html -o docs",
    "docs:deploy": "gh-pages -m 'auto commit [ci skip]' -d docs",
    "release": "standard-version",
    "test": "node test/index.js",
    "postpublish": "npm run docs && npm run docs:deploy"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "bin": {
    "pg-migrate": "./index.js"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=7.6.0"
  },
  "keywords": [
    "postgres",
    "postgresql",
    "migration"
  ],
  "dependencies": {
    "docopt": "0.6.2",
    "documentation": "5.4.0",
    "dotenv": "5.0.0",
    "gh-pages": "1.1.0",
    "pg-monitor": "0.8.5",
    "pg-native": "2.2.0",
    "pg-promise": "7.5.2"
  },
  "devDependencies": {
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "4.17.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.8.0",
    "standard-version": "4.3.0",
    "tape": "4.8.0"
  }
}
